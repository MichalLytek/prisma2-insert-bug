datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["windows"]
}

enum Role {
  USER
  ADMIN
}

model User {
  id     Int     @default(autoincrement()) @id
  email  String  @unique
  name   String?
  age    Int
  amount Float
  posts  Post[]
  role   Role
}

enum PostKind {
  BLOG
  ADVERT
}

model Post {
  uuid      String    @default(uuid()) @id
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  published Boolean
  title     String
  content   String?
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
  kind      PostKind?
}